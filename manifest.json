{
  "manifest_version": 2,
  "name": "스카우터 앱1",
  // "default_locale": "ko",
  "description": "Working@@",
  "version": "1.0",
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "app.html",
    "default_title": "Inject!"
  },
  "options_page": "static/options.html",
  // "permissions": ["activeTab"],
  // "*://*.google.com/"
  "permissions": [
    "identity", "identity.email",
    "tabs",
    "idle",
    "chrome://favicon/*",
    "webNavigation",
    "unlimitedStorage",
    "storage",
    "activeTab",
    "webRequest",
    "http://*/",
    "https://*/",
    "declarativeContent"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "content_scripts": [
    {
        "matches": [
            "https://*/*",
            "http://*/"
        ],
        "js": [
            "static/chrome/content.js"
        ]
    }
],
  "background": {
    "scripts": [
      "static/vendor/angular/angular.js",
      // "static/js/app.js",
      // "static/js/controllers.js",
      // "static/js/background.js",
      "static/js/services.js",

      "static/chrome/background/tracker/common.js",
      "static/chrome/background/tracker/storage.js",
      "static/chrome/background/tracker/activity.js",
      "static/chrome/background/tracker/tab.js",
      "static/chrome/background/tracker/timeInterval.js",
      "static/chrome/background/tracker/background.js"

      // "static/chrome/background/traffic.js"
      // ,"static/chrome/background/Usage.js"
    ],
    "persistent":true

  } //,
