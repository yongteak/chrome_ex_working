// https://developer.chrome.com/docs/extensions/mv3/intro/mv3-migration/
{
  "manifest_version": 3,
  "name": "WEB Screen Time",
  // "default_locale": "ko",
  "description": "WEB Screen Times",
  "version": "1.0",
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "app.html",
    "default_title": "Inject!"
  },
  "options_page": "static/options.html",

  "host_permissions": [
    "http://*/",
    "https://*/"
  ],
  "permissions": [
    "identity", "identity.email",
    "tabs",
    "idle",
    "chrome://favicon/*",
    "webNavigation",
    "unlimitedStorage",
    "storage",
    "activeTab",
    "webRequest",
    "declarativeContent"
  ],
  "content_scripts": [
    {
        "matches": [
            "https://*/*",
            "http://*/"
        ],
        "js": [
            "static/chrome/content.js"
        ]
    }
],
  "background": {
    "service_worker": [
      "static/vendor/angular/angular.js",
      "static/js/services.js",

      "static/chrome/background/tracker/common.js",
      "static/chrome/background/tracker/storage.js",
      "static/chrome/background/tracker/activity.js",
      "static/chrome/background/tracker/tab.js",
      "static/chrome/background/tracker/timeInterval.js",
      "static/chrome/background/tracker/background.js"
    ]
  } 
}